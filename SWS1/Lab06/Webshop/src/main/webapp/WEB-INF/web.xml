	<servlet-mapping>
		<servlet-name>BasketServlet</servlet-name>
		<url-pattern>/basket.action</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ProductRatingServlet</servlet-name>
		<url-pattern>/productRating.action</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AccountEditServlet</servlet-name>
		<url-pattern>/accountEdit.action</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RegistrationServlet</servlet-name>
		<url-pattern>/registration.action</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ServletExceptionHandler</servlet-name>
		<url-pattern>/exceptionHandler</url-pattern>
	</servlet-mapping>
	
	<filter-mapping>
    	<filter-name>ClientFilter</filter-name>
    	<servlet-name>BasketServlet</servlet-name>
    	<servlet-name>ProductRatingServlet</servlet-name>
    	<servlet-name>AccountEditServlet</servlet-name>    	
 	</filter-mapping>
	<filter-mapping>
    	<filter-name>SellerFilter</filter-name>
    	<servlet-name>EditOfferServlet</servlet-name>
    	<servlet-name>OwnOfferServlet</servlet-name>
 	</filter-mapping>
	<filter-mapping>
    	<filter-name>AdminFilter</filter-name>
    	<servlet-name>ClientListServlet</servlet-name>
    	<!--<servlet-name>EditClientServlet</servlet-name>-->
    	<servlet-name>SellerListServlet</servlet-name>
      	<!--<servlet-name>EditSellerServlet</servlet-name>--> 	
 	</filter-mapping>
 	
</web-app>