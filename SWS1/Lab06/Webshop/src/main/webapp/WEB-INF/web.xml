<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">

<display-name>Webshop</display-name>

	<welcome-file-list>
		<welcome-file>home.action</welcome-file>
	</welcome-file-list>
	
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Login</web-resource-name>
			<url-pattern>/login.action</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
		</web-resource-collection>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Logout</web-resource-name>
			<url-pattern>/logout.action</url-pattern>
		</web-resource-collection>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>

	<error-page>
	 	<exception-type>javax.servlet.ServletException</exception-type>
	 	<location>/exceptionHandler</location>
	</error-page>
	<error-page>
	 	<error-code>404</error-code>
	 	<location>/jsp/error404.jsp</location>
	</error-page>
	
	<listener>
		<listener-class>
			helpClasses.ActiveSessionsListener
		</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>
			servlets.LoginServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ClientListServlet</servlet-name>
		<servlet-class>
			servlets.ClientListServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SellerListServlet</servlet-name>
		<servlet-class>
			servlets.SellerListServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EditSellerServlet</servlet-name>
		<servlet-class>
			servlets.EditSellerServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EditClientServlet</servlet-name>
		<servlet-class>
			servlets.EditClientServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>OwnOfferServlet</servlet-name>
		<servlet-class>
			servlets.OwnOfferServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EditOfferServlet</servlet-name>
		<servlet-class>
			servlets.EditOfferServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>HomeServlet</servlet-name>
		<servlet-class>
			servlets.HomeServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>
			servlets.LogoutServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ProductSearchServlet</servlet-name>
		<servlet-class>
			servlets.ProductSearchServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ProductDetailsServlet</servlet-name>
		<servlet-class>
			servlets.ProductDetailsServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BasketServlet</servlet-name>
		<servlet-class>
			servlets.BasketServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ProductRatingServlet</servlet-name>
		<servlet-class>
			servlets.ProductRatingServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AccountEditServlet</servlet-name>
		<servlet-class>
			servlets.AccountEditServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RegistrationServlet</servlet-name>
		<servlet-class>
			servlets.RegistrationServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ServletExceptionHandler</servlet-name>
		<servlet-class>
			servlets.ServletExceptionHandler
		</servlet-class>
	</servlet>

	<filter>
		<filter-name>ClientFilter</filter-name>
		<filter-class>filters.ClientFilter</filter-class>
	</filter>
	<filter>
		<filter-name>SellerFilter</filter-name>
		<filter-class>filters.SellerFilter</filter-class>
	</filter>	
	<filter>
		<filter-name>AdminFilter</filter-name>
		<filter-class>filters.AdminFilter</filter-class>
	</filter>
	
	<listener>
		<listener-class>helpClasses.WebshopContextListener</listener-class>
	</listener>
	

	<servlet-mapping>
		<servlet-name>OwnOfferServlet</servlet-name>
		<url-pattern>/ownOffer.action</url-pattern>
	</servlet-mapping>
