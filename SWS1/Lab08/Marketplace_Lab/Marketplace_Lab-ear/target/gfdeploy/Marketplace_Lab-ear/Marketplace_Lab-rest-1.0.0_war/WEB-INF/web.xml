<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         id="WebApp_ID" version="3.1">
    <security-role>
        <description>Sales Personnel</description>
        <role-name>sales</role-name>
    </security-role>
    <security-role>
        <description>Marketing Personnel</description>
        <role-name>marketing</role-name>
    </security-role>
    <security-role>
        <description>Product Managers</description>
        <role-name>productmanager</role-name>
    </security-role>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Restrict everything not explicitly allowed</web-resource-name>
            <url-pattern>/rest/*</url-pattern>
        </web-resource-collection>
        <auth-constraint />
    </security-constraint>
    <deny-uncovered-http-methods/>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Marketplace REST products GET</web-resource-name>
            <url-pattern>/rest/products</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Marketplace REST admin products GET</web-resource-name>
            <url-pattern>/rest/admin/products</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
	<auth-constraint>
            <role-name>productmanager</role-name>
        </auth-constraint>	
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Marketplace REST admin products POST</web-resource-name>
            <url-pattern>/rest/admin/products</url-pattern>
            <http-method>POST</http-method>
        </web-resource-collection>
	<auth-constraint>
            <role-name>productmanager</role-name>
        </auth-constraint>	
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Marketplace REST admin products DELETE</web-resource-name>
            <url-pattern>/rest/admin/products/*</url-pattern>
            <http-method>DELETE</http-method> 
        </web-resource-collection>
        <auth-constraint>
            <role-name>productmanager</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Marketplace REST purchases POST</web-resource-name>
            <url-pattern>/rest/purchases</url-pattern>
            <http-method>POST</http-method> 
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Marketplace REST admin purchases GET</web-resource-name>
            <url-pattern>/rest/admin/purchases</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>sales</role-name>
            <role-name>marketing</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Marketplace REST admin purchases DELETE</web-resource-name>
            <url-pattern>/rest/admin/purchases/*</url-pattern>
            <http-method>DELETE</http-method> 
        </web-resource-collection>
        <auth-constraint>
            <role-name>sales</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Marketplace REST authenticate POST</web-resource-name>
            <url-pattern>/rest/authenticate</url-pattern>
            <http-method>POST</http-method> 
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Marketplace REST authenticate DELETE</web-resource-name>
            <url-pattern>/rest/authenticate</url-pattern>
            <http-method>DELETE</http-method> 
        </web-resource-collection>
        <auth-constraint>
            <role-name>sales</role-name>
            <role-name>marketing</role-name>
            <role-name>productmanager</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>marketplace-rest-realm</realm-name>
    </login-config>
    <error-page>
        <error-code>401</error-code>
        <location>/error/error401</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/error/error403</location>
    </error-page>
</web-app>
